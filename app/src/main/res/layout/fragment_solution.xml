<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 제목 -->

    <!-- 구분선 -->
    <View
        android:id="@+id/nav_underbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="#999999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 건강 솔루션 -->
    <LinearLayout
        android:id="@+id/solution_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nav_underbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <!-- 건강 솔루션 이름 -->
        <TextView
            android:id="@+id/solution_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="건강 솔루션"
            android:layout_margin="10dp" />

        <!-- 구분선 -->
        <View
            android:id="@+id/detail_underbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <!-- 건강 솔루션 목록 -->
        <LinearLayout
            android:id="@+id/date_solution_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <!-- 날짜별 기록 건강 솔루션 기록 (사진을 찍은 날이 있으면 추가) -->
            <LinearLayout
                android:id="@+id/btn_date_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- 촬영 날짜 (실제 촬영한 날짜가 출력해야 함) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000년 00월 00일"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <!-- 평균 수치에 맞는 솔루션 내용 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="솔루션 내용"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <!-- 예시로 하나 더 작성함 -->
            <LinearLayout
                android:id="@+id/btn_date_detail02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- 촬영 날짜 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0000년 00월 00일"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <!-- 평균 수치에 맞는 솔루션 내용 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="솔루션 내용"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
